{
  "name": "ember-hotspots",
  "version": "0.1.0",
  "description": "Create interactive prototypes from scratch and design mockups using little code but the full power of the Ember.js ecosystem.",
  "keywords": [
    "ember-addon"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:simplabs/ember-hotspots.git"
  },
  "license": "MIT",
  "author": "",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "format": "npm-run-all --aggregate-output --continue-on-error --parallel format:*",
    "format:hbs": "ember-template-lint . --fix",
    "format:js": "eslint . --fix",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "start": "ember serve",
    "test": "npm-run-all test:*",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each"
  },
  "dependencies": {
    "broccoli-funnel": "^3.0.3",
    "broccoli-merge-trees": "^4.2.0",
    "broccoli-persistent-filter": "^3.1.2",
    "broccoli-plugin": "^4.0.3",
    "broccoli-stew": "^3.0.0",
    "ember-cli-babel": "^7.23.0",
    "ember-cli-htmlbars": "^5.3.1",
    "ember-fetch": "^8.0.2",
    "glob": "^7.1.6",
    "image-size": "^0.9.3",
    "mkdirp": "^1.0.4",
    "walk-sync": "^2.2.0"
  },
  "devDependencies": {
    "@ember/optional-features": "2.0.0",
    "@glimmer/component": "^1.0.1",
    "@glimmer/tracking": "^1.0.1",
    "babel-eslint": "10.1.0",
    "broccoli-asset-rev": "3.0.0",
    "ember-auto-import": "1.12.1",
    "ember-cli": "3.28.5",
    "ember-cli-dependency-checker": "3.3.1",
    "ember-cli-inject-live-reload": "2.1.0",
    "ember-cli-sri": "2.1.1",
    "ember-cli-terser": "4.0.2",
    "ember-disable-prototype-extensions": "1.1.3",
    "ember-export-application-global": "2.0.1",
    "ember-fetch": "8.1.1",
    "ember-load-initializers": "2.1.2",
    "ember-maybe-import-regenerator": "0.1.6",
    "ember-qunit": "4.6.0",
    "ember-resolver": "8.0.3",
    "ember-source": "3.23.1",
    "ember-source-channel-url": "3.0.0",
    "ember-template-lint": "2.21.0",
    "ember-test-selectors": "5.5.0",
    "ember-try": "1.4.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-ember": "10.6.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-qunit": "5.4.0",
    "loader.js": "4.7.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "qunit-dom": "1.6.0",
    "release-it": "14.14.2",
    "release-it-lerna-changelog": "3.1.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
